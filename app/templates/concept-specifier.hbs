<div class="ui container padded segment">
  <form class="ui huge form" {{action "refreshModel" on="submit"}}>
    <div class="eight wide field">
      <label>Input Concept</label>
      <Input @value={{this.concept}} @enter={{action "refreshModel"}} placeholder="Concept..."/>
    </div>
    <button class="ui huge button {{unless this.paramsAreValid "disabled"}}" type="submit">Specify</button>
  </form>

  {{#if this.error}}
    <div class="ui error message">
      <div class="ui header">An error occurred</div>
      {{this.error}}
    </div>
  {{/if}}

  {{#if this.isSuccess}}
    <div class="ui divider"></div>
    <a class="ui top attached button" href={{this.downloadUrl}} download="{{this.concept}}.casl">Save CASL</a>
    <div class="ui attached segment">
      <p>{{this.spec}}</p>
    </div>
  {{/if}}

  {{#if this.currentlyLoading}}
    <div class="ui active inverted dimmer">
      <div class="ui huge text loader">Extract and specify mental space...</div>
    </div>
  {{/if}}
</div>
